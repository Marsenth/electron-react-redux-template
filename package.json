{
  "name": "electron-react-template",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@electron/remote": "^1.0.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "antd": "^4.18.2",
    "dotenv": "^16.0.0",
    "electron-is-dev": "^1.2.0",
    "lodash": "^4.17.21",
    "mongoose": "^6.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.6",
    "react-scripts": "4.0.1",
    "sass": "^1.45.2",
    "web-vitals": "^0.2.4"
  },
  "main": "src/main/index.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently -k \"cross-env BROWSER=none npm run react:start\" \"npm run serve\"",
    "build": "npm run react:build && npm run react:files && electron-builder",
    "serve": "wait-on tcp:3000 && electron .",
    "react:files": "cp -r src/main build/main",
    "react:start": "react-scripts start",
    "react:build": "react-scripts build",
    "react:test": "react-scripts test",
    "react:eject": "react-scripts eject"
  },
  "build": {
    "appId": "com.electron-react-template.electron-cra",
    "extends": null,
    "files": [
      "./dist/**/*",
      "./build/**/*",
      "./node_modules/**/*",
      "./package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraMetadata": {
      "main": "build/main/index.js"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron": "^11.2.1",
    "electron-builder": "^22.14.13",
    "electron-devtools-installer": "^3.2.0",
    "prettier": "^2.2.1",
    "redux-devtools-extension": "^2.13.9",
    "wait-on": "^5.2.1"
  }
}
